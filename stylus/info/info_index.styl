@import "../head.styl"
body
	background #efeff1
	.login_box
		position relative
		display flex
		height 95px
		padding 0 15px
		background #fff
		margin-top 10px
		.login_img
			position absolute
			top 50%
			left 15px
			width 64px
			height 64px
			margin-top -32px
			border-radius 50%
			background url("../../img/log in_user-head@2x.png") no-repeat
			background-size cover
		.img_icon:after
			content ''
			display block
			width 36px
			height 36px
			background url("../../img/log-in_member_icon@2x.png") no-repeat
			background-size 50%
			position absolute
			top 46px
			left 43px
		.login_con
			flex 1
			padding-left 80px
			line-height 95px
			&:after
				content ''
				position absolute
				top 50%
				right 15px
				margin-top -18px
				display block
				width 20px
				height 36px
				background url("../../img/log in_right_icon@2x.png") no-repeat center
				background-size 50%
		.login_change
			line-height 20px
			margin-top 30px
			p
				margin 0
				padding 0
				font-size 12px
				color #3c3c3c
				position relative
				&:after
					content ''
					display block
					width 22px
					height 24px
					background url("../../img/log-in_edit_icon@2x.png") no-repeat
					background-size 55%
					position absolute
					left 4.5em
					top 3px
			&:after
				content ''
				position absolute
				top 50%
				right 15px
				margin-top -18px
				display block
				width 20px
				height 36px
				background url("../../img/log in_right_icon@2x.png") no-repeat center
				background-size 50%

	.link_cell
		position relative
		height 50px
		padding-left 45px
		background #fff url("../../img/content_list_icon01@2x.png") no-repeat left 15px center
		background-size 20px
		line-height 50px
		margin-top 10px
		&:after
			content ''
			display block
			width 16px
			height 30px
			position absolute
			top 50%
			right 15px
			margin-top -15px
			background url("../../img/content_list_right_icon@2x.png") no-repeat right center
			background-size 50%
	.house
		height 50px
		padding-left 45px
		background #fff url("../../img/content_list_icon02@2x.png") no-repeat left 15px center
		background-size 20px
		line-height 50px
		margin-top 10px
	.chat
		height 50px
		padding-left 45px
		background #fff url("../../img/content_list_icon05@2x.png") no-repeat left 15px center
		background-size 20px
		line-height 50px
		margin-top 10px
	.case
		height 50px
		padding-left 45px
		background #fff url("../../img/content_list_icon03@2x.png") no-repeat left 15px center
		background-size 20px
		line-height 50px
		margin-top 10px
	.out
		height 50px
		padding-left 45px
		background #fff url("../../img/content_list_icon04@2x.png") no-repeat left 15px center
		background-size 20px
		line-height 50px
		margin-top 10px

.s_box
	background-color #fff
	width 100%
	height 50px
	display flex
	border-top 1px solid #d6d7dc
	.s_left
		flex 1
		text-align center
		margin 0 auto
		border-right 1px solid #d6d7dc
		line-height 50px
		color #646464
	.s_right
		flex 1
		line-height 50px
		text-align center
		margin 0 auto
		color #646464
