.md
	width 300px
	height 300px
	background yellow
	color white
	font-size 30px
	&:after
		content '1'
	&:before
		content '0'
//screen han
@media all and (min-width:800px)
	body
		background #000
@media (max-width:800px) and (min-width:600px)
	body
		background #f00
@media (max-width:600px)
	body
		background blue
@media (min-width:800px) and (max-width:1000px)
	.md
		font-size 50px
