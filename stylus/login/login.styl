$orange=#ed6928

*
	padding 0
	outline none
body
	background-color #efefef
	.header
		height 35px
		background-color #fff
		line-height 35px
		.icon-back
			position absolute
			top 0
			left 0
			display inline-block
			width 35px
			height 35px
			background url("../../img/nav_back_icon@2x.png") no-repeat center
			background-size 12px 18px
		.header_title
			display inline-block
			width 100%
			color $orange
			text-align center
	.form-list
		width 100%
		margin-top 15px
		background #fff
		.form-cell
			position relative
			display flex
			height 40px
			line-height 40px
			&-name
				display inline-block
				width 50px
				padding-left 40px
				background url("../../img/content_ID_icon@2x.png") no-repeat left 10px center
				background-size 20%
				&.cell-passwd
					background url("../../img/content_password_icon@2x.png") no-repeat left 10px center
					background-size 16%
			.form-cell-input
				flex 1
				border none
			.btn_code
				width 8em
				font-size 12px
				background-color $orange
				color white
				text-align center
				border-radius 5px
				height 25px
				line-height 25px
				margin-top 8px
				margin-right 10px
				border none
			&:after
				content ''
				position absolute
				bottom -1px
				left 10px
				z-index 5
				display block
				height 1px
				width 97%
				background-color #efefef
			& .cell-code
				width 55px
				background url("../../img/content_verify_icon@2x.png") no-repeat left 10px center
				background-size 14%
			& .cell-status
				width 50px
				background url("../../img/content_position_icon@2x.png") no-repeat left 10px center
				background-size 18%
				&:after
					content ''
					display block
					background url("../../img/nav_back_icon@2x.png") no-repeat center
					background-size 40%
					width 20px
					height 36px
					transform rotate(-90deg)
					position absolute
					right 10px
					bottom 7px
	.bt_box
		display flex
		height 40px
		margin-top 20px
		padding 0 15px
		.btn_login
			display block
			width 100%
			height 40px
			border none
			border-radius 5px
			background-color #c7c7c7
			color #fff
			font-size 1.1rem
			line-height 40px
		.bt-reg
			padding-left 10px
			flex 1
			color $orange
			font-size 14px
		.registered
			color #707071
			span
				color $orange
				text-decoration underline
		.bt-passwd
			padding-right 10px
			font-size 14px

.register_pull
	width 4.5em
	height 150px
	position absolute
	right 15px
	top 28px
	border-radius 5px
	background-color #222222
	z-index 10
	display none
	.register_ul
		list-style none
		margin 0
		padding 0
		.register_li
			width 4.5em
			height 30px
			text-align center
			line-height 30px
.verificate_code
	display inline-block
	width 65px
#broker
	color #b4b4b4
.move_size
	width 150px
